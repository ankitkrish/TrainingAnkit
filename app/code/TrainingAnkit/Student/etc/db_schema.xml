<?xml version="1.0"?>
<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:Setup/Declaration/Schema/etc/schema.xsd">
    <table name="trainingankit_crud" resource="default" engine="innodb" comment="Crud Form">
        <column xsi:type="int" name="student_id" padding="10" unsigned="true" nullable="false" identity="true" comment="Student ID"/>
        <column xsi:type="varchar" name="name" nullable="false" length="255" default="" comment="Name"/>
        <column xsi:type="varchar" name="gender" nullable="false" length="255" comment="Gender"/>
        <column xsi:type="text" name="qualification" nullable="false" comment="Qualification"/>
        <column xsi:type="text" name="hobby" nullable="false" comment="hobby"/>
        <column xsi:type="varchar" length="255" name="city" nullable="false" comment="City"/>
        <column xsi:type="varchar" length="255" name="color" nullable="false" comment="Favourite Color"/>
        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="student_id"/>
        </constraint>
    </table>
</schema>