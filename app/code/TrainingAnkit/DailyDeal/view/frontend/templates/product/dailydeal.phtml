if ($block->getStatus() && $block->getPriceCountDown()) {
    date_default_timezone_set("Asia/Kolkata");
    if ($block->getDealFrom() < date('Y-m-d H:i:s') && $block->getDealTo() > date('Y-m-d H:i:s')) {
        ?>
        <div class="title"><?= /* @noEscape */ __("Deal Ends In"); ?></div>
        <div id="countdowntimer" class="countdowntimer"><span id="future_date"><span></div>
        <script>
            require([
                'jquery',
                'TrainingAnkit_DailyDeal/js/jquery.countdownTimer'
            ], function ($) {
                $("#future_date").countdowntimer({
                startDate : "<?=  /* @noEscape */ str_replace('-', '/', date('Y/m/d H:i:s')); ?>",
                dateAndTime : "<?=  /* @noEscape */ str_replace('-', '/', $block->getDealTo()); ?>",
                size : "lg",
                regexpMatchFormat: "([0-9]{1,2}):([0-9]{1,2}):([0-9]{1,2}):([0-9]{1,2})",
                regexpReplaceWith: "$1<sup>days</sup> / $2<sup>hours</sup> / $3<sup>minutes</sup>/ $4<sup>seconds</sup>"
            });
            });
        </script>
        <?php
    }
