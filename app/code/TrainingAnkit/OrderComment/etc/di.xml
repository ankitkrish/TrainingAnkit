<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:noNamespaceSchemaLocation="urn:magento:framework:ObjectManager/etc/config.xsd">
    <preference for="TrainingAnkit\OrderComment\Api\Data\OrderCommentInterface"
             	type="TrainingAnkit\OrderComment\Model\Data\OrderComment" />
    <preference for="TrainingAnkit\OrderComment\Api\OrderCommentManagementInterface"
            	type="TrainingAnkit\OrderComment\Model\OrderCommentManagement" />
    <preference for="TrainingAnkit\OrderComment\Api\GuestOrderCommentManagementInterface"
             	type="TrainingAnkit\OrderComment\Model\GuestOrderCommentManagement" />
    <virtualType name="Magento\Sales\Model\ResourceModel\Order\Grid">
        <arguments>
            <argument name="columns" xsi:type="array">
                <item name="ta_order_comment"
				      xsi:type="string">sales_order.ta_order_comment</item>
            </argument>
        </arguments>
    </virtualType>
    <type name="Magento\Sales\Api\OrderRepositoryInterface">
        <plugin name="um_add_ordercomment" type="TrainingAnkit\OrderComment\Plugin\Model\Order\AddTaOrderComment"/>
    </type>
</config>
